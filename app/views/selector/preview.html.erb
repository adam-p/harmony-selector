          <td class="table-centered">
            <!-- Entity HTML -->
            <%= form_for(@agreement, :url => { :controller => "selector", :action => "preview_formatted" }) do |f| %>
             <%= f.hidden_field :projectname, :value => @agreement.projectname %>
